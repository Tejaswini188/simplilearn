<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    
    <!--CONNECTION OR CONFIGURATION OF DATA WITH WHICH U GONNA PREPARE THE TABLE IN DATABASE  -->
    
    <hibernate-mapping package="com.Learner.demo">
    
    <class name="SubjectDetails" table="subject">
    
    <id name="ID" type="long" column="ID">
    <generator class="increment"></generator>
    </id>
    
    <property name="name" type="string"></property>
    <property name="std" type="string"></property>
    <property name="subcode" type="big_decimal"></property>
    
    </class>
    </hibernate-mapping>